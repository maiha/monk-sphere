// locals: videos
= javascript_include_tag "dataTables-1.4/media/js/jquery.dataTables.min.js"
= stylesheet_link_tag "site", :media => :screen, :charset => 'utf-8'

%table#videos.display
  %thead
    %tr
      %th VideoID
      %th DL状態
      %th タイトル
      %th 登録日
  %tbody
    - videos.each_with_index do |v, i|
      %tr
        %td= v.code
        %td= video_state(v)
        %td= link_to v.title, "/youtube/#{v.id}"
        %td= v.date

:javascript
  $(document).ready(function() {
    $('#videos').dataTable({iDisplayLength:25});
  } );
